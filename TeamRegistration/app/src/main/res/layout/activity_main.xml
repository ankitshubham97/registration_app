<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/reg_bg"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teamname" /> -->



    <EditText
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name of the Team"
        android:id="@+id/editTeamname"
        android:textColorHint="#c6c0c0"
        android:layout_above="@+id/editEntry1"
        android:textColor="#ffffff"
        android:layout_toRightOf="@+id/buttonHelp"
        android:layout_toEndOf="@+id/buttonHelp" />

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name1" /> -->

    <EditText
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name of the 1st Member"
        android:id="@+id/editName1"
        android:textColorHint="#c6c0c0"
        android:textColor="#ffffff"
        android:layout_above="@+id/editEntry2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/buttonHelp"
        android:layout_toEndOf="@+id/buttonHelp" />

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entry1" /> -->

    <EditText
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Entry no. of the 1st Member"
        android:id="@+id/editEntry1"
        android:textColorHint="#c6c0c0"
        android:textColor="#ffffff"
        android:layout_above="@+id/editName1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/buttonHelp"
        android:layout_toEndOf="@+id/buttonHelp" />

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name2" /> -->

    <EditText
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name of the 2nd Member"
        android:id="@+id/editName2"
        android:textColorHint="#c6c0c0"
        android:textColor="#ffffff"
        android:layout_above="@+id/editEntry3"
        android:layout_toRightOf="@+id/buttonHelp"
        android:layout_toEndOf="@+id/buttonHelp" />

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entry2" /> -->

    <EditText
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Entry no. of the 2nd Member"
        android:id="@+id/editEntry2"
        android:textColorHint="#c6c0c0"
        android:textColor="#ffffff"
        android:layout_above="@+id/editName2"
        android:layout_toRightOf="@+id/buttonHelp"
        android:layout_toEndOf="@+id/buttonHelp" />

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name3" /> -->

    <EditText
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name of the 3rd Member"
        android:id="@+id/editName3"
        android:textColorHint="#c6c0c0"
        android:textColor="#ffffff"
        android:layout_marginBottom="102dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/buttonHelp"
        android:layout_toEndOf="@+id/buttonHelp" />

    <!--
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entry3" /> -->

    <EditText
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Entry no. of the 3rd Member"
        android:id="@+id/editEntry3"
        android:textColorHint="#c6c0c0"
        android:textColor="#ffffff"
        android:layout_above="@+id/buttonRegister"
        android:layout_toRightOf="@+id/buttonHelp"
        android:layout_toEndOf="@+id/buttonHelp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/buttonRegister"
        android:layout_marginTop="40dp"
        android:layout_alignTop="@+id/editName3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/buttonBack"
        android:layout_toLeftOf="@+id/buttonBack" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help Me"
        android:id="@+id/buttonHelp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:id="@+id/buttonAboutUs"
        android:layout_alignTop="@+id/buttonHelp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Team:"
        android:id="@+id/textViewTeam"
        android:layout_alignTop="@+id/editTeamname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/editEntry1"
        android:layout_toLeftOf="@+id/editTeamname"
        android:layout_toStartOf="@+id/editTeamname"
        android:textColor="#f4bdbd"
        android:visibility="invisible"
        android:typeface="sans" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Name:"
        android:id="@+id/textViewName1"
        android:layout_above="@+id/editEntry2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/editName1"
        android:layout_toLeftOf="@+id/editName1"
        android:layout_toStartOf="@+id/editName1"
        android:textColor="#f4bdbd"
        android:visibility="invisible"
        android:typeface="sans" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Entry No:"
        android:id="@+id/textViewEntry2"
        android:layout_below="@+id/editName1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/editEntry2"
        android:layout_toLeftOf="@+id/editEntry2"
        android:layout_toStartOf="@+id/editEntry2"
        android:textColor="#f4bdbd"
        android:visibility="invisible"
        android:typeface="sans" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Name:"
        android:id="@+id/textViewName2"
        android:layout_below="@+id/editEntry2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/editName2"
        android:layout_toLeftOf="@+id/editName2"
        android:layout_toStartOf="@+id/editName2"
        android:textColor="#f4bdbd"
        android:visibility="invisible"
        android:typeface="sans" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Entry No:"
        android:id="@+id/textViewEntry3"
        android:layout_below="@+id/editName2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/editEntry3"
        android:layout_toLeftOf="@+id/editEntry3"
        android:layout_toStartOf="@+id/editEntry3"
        android:textColor="#f4bdbd"
        android:visibility="invisible"
        android:typeface="sans" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Name:"
        android:id="@+id/textViewName3"
        android:layout_below="@+id/editEntry3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/editName3"
        android:layout_toLeftOf="@+id/editName3"
        android:layout_toStartOf="@+id/editName3"
        android:textColor="#f4bdbd"
        android:visibility="invisible"
        android:typeface="sans" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Entry No:"
        android:id="@+id/textViewEntry1"
        android:layout_below="@+id/editTeamname"
        android:layout_alignBottom="@+id/editEntry1"
        android:layout_toLeftOf="@+id/editTeamname"
        android:textColor="#f4bdbd"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible"
        android:typeface="sans" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="                       * 3rd member is optional"
        android:id="@+id/textView2"
        android:layout_alignRight="@+id/editTeamname"
        android:layout_alignEnd="@+id/editTeamname"
        android:layout_toRightOf="@+id/textViewTeam"
        android:layout_toEndOf="@+id/textViewTeam"
        android:layout_above="@+id/editTeamname"
        android:textColor="#c6c0c0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/buttonBack"
        android:layout_alignTop="@+id/buttonRegister"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>